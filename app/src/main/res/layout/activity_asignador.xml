<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="24dp"
    tools:context=".activities.AsignadorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 游댳 Encabezado -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido, Asignador"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rol: ASIGNADOR"
            android:textSize="16sp"
            android:textColor="#424242"
            android:gravity="center"
            android:paddingBottom="24dp" />

        <!-- 游댳 Botones de acci칩n -->
        <Button
            android:id="@+id/btnAssignCollectors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游논 Asignar Recolectores"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnManagePickups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游늸 Gestionar Recogidas"
            android:backgroundTint="#03A9F4"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAssignVehicles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游뚵 Asignar Veh칤culos"
            android:backgroundTint="#0288D1"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp" />

        <!-- 游댳 Cerrar sesi칩n -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游뛁 Cerrar Sesi칩n"
            android:backgroundTint="#B71C1C"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
