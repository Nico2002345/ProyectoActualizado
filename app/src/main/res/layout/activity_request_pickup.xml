<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.RequestPickupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitar Recogida"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#212121"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete los datos para solicitar que un recolector recoja su mercancía"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:paddingBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="@android:color/white"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección de recogida:"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: Calle 123, Ciudad"
                    android:inputType="textPostalAddress"
                    android:minLines="2"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso estimado (kg):"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: 15.5"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volumen estimado (m³):"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/etVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: 0.5"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha y hora preferida (opcional):"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/etScheduledTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: 2025-11-15 14:00"
                    android:inputType="datetime"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btnRequestPickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solicitar Recogida"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:padding="16dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección de historial de solicitudes -->
        <TextView
            android:id="@+id/tvHistoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis Solicitudes de Recogida"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/lvPickups"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:background="@android:color/white"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>