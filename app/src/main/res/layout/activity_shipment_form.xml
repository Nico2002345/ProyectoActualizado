<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".activities.ShipmentFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo Envío"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#212121"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="2dp"
            card_view:cardBackgroundColor="@android:color/white"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Datos del objeto -->
                <EditText
                    android:id="@+id/etObject"
                    android:hint="Descripción del objeto"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:backgroundTint="#2196F3" />

                <!-- Medidas -->
                <EditText
                    android:id="@+id/etHeight"
                    android:hint="Alto (cm)"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:padding="8dp"
                    android:backgroundTint="#2196F3" />

                <EditText
                    android:id="@+id/etWidth"
                    android:hint="Ancho (cm)"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:padding="8dp"
                    android:backgroundTint="#2196F3" />

                <EditText
                    android:id="@+id/etLength"
                    android:hint="Largo (cm)"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:padding="8dp"
                    android:backgroundTint="#2196F3" />

                <EditText
                    android:id="@+id/etWeight"
                    android:hint="Peso (kg)"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:padding="8dp"
                    android:backgroundTint="#2196F3" />

                <!-- Remitente -->
                <EditText
                    android:id="@+id/etSenderName"
                    android:hint="Nombre del remitente"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:backgroundTint="#4CAF50" />

                <EditText
                    android:id="@+id/etSenderContact"
                    android:hint="Teléfono del remitente"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:padding="8dp"
                    android:backgroundTint="#4CAF50" />

                <!-- Destinatario -->
                <EditText
                    android:id="@+id/etReceiverName"
                    android:hint="Nombre del destinatario"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:backgroundTint="#FF9800" />

                <EditText
                    android:id="@+id/etReceiverContact"
                    android:hint="Teléfono del destinatario"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:padding="8dp"
                    android:backgroundTint="#FF9800" />

                <EditText
                    android:id="@+id/etReceiverAddress"
                    android:hint="Dirección del destinatario"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:padding="8dp"
                    android:backgroundTint="#FF9800" />

                <EditText
                    android:id="@+id/etDistance"
                    android:hint="Distancia (km)"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:padding="8dp"
                    android:backgroundTint="#FF9800" />

                <!-- Botón Guardar -->
                <Button
                    android:id="@+id/btnSaveShipment"
                    android:text="Guardar Envío"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
