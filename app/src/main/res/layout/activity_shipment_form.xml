<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".activities.ShipmentFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!--   T铆tulo  -->
        <TextView
            android:id="@+id/tvShipmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo Env铆o"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#212121"
            android:paddingBottom="16dp" />

        <!--   Tarjeta del formulario  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/white"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--  Campo descripci贸n  -->
                <EditText
                    android:id="@+id/etObject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripci贸n del objeto"
                    android:inputType="textCapSentences"
                    android:padding="12dp"
                    android:backgroundTint="#2196F3"
                    android:importantForAutofill="no" />

                <!--  Campo direcci贸n  -->
                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Direcci贸n del destinatario"
                    android:inputType="textCapSentences"
                    android:padding="12dp"
                    android:backgroundTint="#2196F3"
                    android:importantForAutofill="no" />

                <!--  Campo peso  -->
                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Peso (kg)"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:backgroundTint="#2196F3"
                    android:importantForAutofill="no" />

                <!--  Campo distancia  -->
                <EditText
                    android:id="@+id/etDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Distancia (km)"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:backgroundTint="#2196F3"
                    android:importantForAutofill="no" />

                <!--  Campo volumen  -->
                <EditText
                    android:id="@+id/etVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Volumen (m鲁)"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:backgroundTint="#2196F3"
                    android:importantForAutofill="no" />

                <!--  Bot贸n guardar  -->
                <Button
                    android:id="@+id/btnSaveShipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Guardar Env铆o"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#1976D2"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--   Nota informativa  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Todos los campos son obligatorios"
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="center"
            android:paddingTop="12dp" />
    </LinearLayout>
</ScrollView>
